<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Last Added Data</title>
    <script>
        function convertToGMT4(dateTime) {
            var date = new Date(dateTime + " UTC");
            var targetOffset = 0 * 60; // GMT+4 in minutes
            var adjustedDate = new Date(date.getTime() + targetOffset * 60 * 1000);
            return adjustedDate.toLocaleString();
        }
    </script>
</head>
<body>
    <h1>Last 10 Records</h1>
    <table>
        <thead>
            <tr>
                <th>Date/Time (GMT+4)</th>
                <th>Temperature</th>
                <th>Humidity</th>
                <th>Relay Status</th>
                <th>Created At (GMT+4)</th>
                <th>Updated At (GMT+4)</th>
            </tr>
        </thead>
        <tbody>
            <% data.forEach((record) => { %>
                <tr>
                    <td><script>document.write(convertToGMT4('<%= record.dateTime %>'));</script></td>
                    <td><%= record.temperature %> Â°C</td>
                    <td><%= record.humidity %> %</td>
                    <td><%= record.relay_status ? 'ON' : 'OFF' %></td>
                    <td><script>document.write(convertToGMT4('<%= record.created_at %>'));</script></td>
                    <td><script>document.write(convertToGMT4('<%= record.updated_at %>'));</script></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>

                   
